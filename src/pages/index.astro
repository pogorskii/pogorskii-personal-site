<style>
	h1 {
		margin-bottom: 3.2rem;
		display: flex;
		flex-direction: column;
		font-size: 10rem;
		font-weight: 600;
		line-height: 1;
		letter-spacing: -0.1ch;
	}

	h1 span:nth-child(2) {
		margin-left: 1.5ch;
	}

	.introduction-box {
		width: fit-content;
		margin-left: auto;
		margin-right: auto;
	}

	.sub-heading {
		margin-bottom: 1.6rem;
		font-size: 2.2rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: .2em;
		line-height: 1;
		text-align: center;
	}

	.core-skills {
		font-size: 1.8rem;
		text-align: center;
		font-weight: 500;
		letter-spacing: .1em;
	}

	.skills-box {
		height: 400px;
		padding: 2rem;
		border-radius: 3rem;
		background-color: chartreuse;
	}
</style>
