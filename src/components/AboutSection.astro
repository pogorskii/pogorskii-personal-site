const facts = [
  `I spoke with a movie director James Gunn face-to-face`,
  `I learned fluent English by playing video games`,
  `I got my PS One in exchange for helping a friend with his computer`,
  `I say "please" and "thank you" to AI`,
  `I'm left-handed, but still use my mouse with right hand`,
  `My first programming language is Pascal`
];

const getRandomInt = (min, max) => {
  min = Math.ceil(min);
  max = Math.floor(max);
  return Math.floor(Math.random() * (max - min + 1)) + min;
}
const randomNumber = getRandomInt(0, facts.length - 1);
